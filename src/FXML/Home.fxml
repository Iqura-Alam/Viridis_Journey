<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.HomeController"
      alignment="CENTER"
      spacing="20"
      style="-fx-background-image: url('/img/VIRIDIS_JOURNEY.jpg'); -fx-background-size: cover; -fx-background-position: center; -fx-padding: 30;">

    <!-- Load custom font -->
    <fx:define>
        <Font fx:id="karmaticFont" name="Karmatic Arcade" size="36" />
    </fx:define>

    <!-- Game Title -->
    <Label fx:id="titleLabel" text="VIRIDIS JOURNEY" 
       style="-fx-font-family: 'Karmatic Arcade'; -fx-font-size: 72; 
              -fx-text-fill: white; -fx-effect: dropshadow(gaussian, black, 4, 0, 2, 2);"/>


    <!-- Menu Buttons with drop shadow -->
    <Button fx:id="startButton" text="Start Game" onAction="#goToDifficulty" 
            style="-fx-font-family: 'Karmatic Arcade'; -fx-font-size: 24; -fx-background-color: #1abc9c; -fx-text-fill: white; -fx-padding: 10 20 10 20; -fx-effect: dropshadow(gaussian, black, 5, 0, 2, 2);"/>
    <Button fx:id="howToPlayButton" text="How to Play" onAction="#goToHowToPlay" 
            style="-fx-font-family: 'Karmatic Arcade'; -fx-font-size: 24; -fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 10 20 10 20; -fx-effect: dropshadow(gaussian, black, 5, 0, 2, 2);"/>
    <Button fx:id="aboutButton" text="About" onAction="#goToAbout" 
            style="-fx-font-family: 'Karmatic Arcade'; -fx-font-size: 24; -fx-background-color: #9b59b6; -fx-text-fill: white; -fx-padding: 10 20 10 20; -fx-effect: dropshadow(gaussian, black, 5, 0, 2, 2);"/>
    <Button fx:id="settingsButton" text="Settings" onAction="#goToSettings" 
            style="-fx-font-family: 'Karmatic Arcade'; -fx-font-size: 24; -fx-background-color: #f39c12; -fx-text-fill: white; -fx-padding: 10 20 10 20; -fx-effect: dropshadow(gaussian, black, 5, 0, 2, 2);"/>
    <Button fx:id="exitButton" text="Exit" onAction="#exitGame" 
            style="-fx-font-family: 'Karmatic Arcade'; -fx-font-size: 24; -fx-background-color: #e74c3c; -fx-text-fill: white; -fx-padding: 10 20 10 20; -fx-effect: dropshadow(gaussian, black, 5, 0, 2, 2);"/>

</VBox>
