<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.GameOverController"
      alignment="CENTER"
      spacing="20"
      style="-fx-background-image: url('/img/VIRIDIS_JOURNEY.jpg'); 
             -fx-background-size: cover; 
             -fx-background-position: center; 
             -fx-padding: 30;">

    <!-- Load custom font -->
    <fx:define>
        <Font fx:id="karmaticFont" name="Karmatic Arcade" size="36" />
    </fx:define>

    <!-- Game Over Title -->
    <Label text="GAME OVER" 
           font="$karmaticFont"
           style="-fx-text-fill: white; 
                  -fx-effect: dropshadow(gaussian, black, 4, 0, 2, 2);" />

    <!-- Reason for Game Over -->
    <Label fx:id="reasonLabel"
           font="$karmaticFont"
           style="-fx-font-size: 18; 
                  -fx-text-fill: white; 
                  -fx-effect: dropshadow(gaussian, black, 4, 0, 2, 2);" />

    <!-- Buttons -->
    <Button text="Retry from Start" onAction="#retryFromStart"
            style="-fx-font-family: 'Karmatic Arcade'; 
                   -fx-font-size: 24; 
                   -fx-background-color: #1abc9c; 
                   -fx-text-fill: white; 
                   -fx-padding: 10 20;" />

    <Button text="Quit to Home" onAction="#quitToHome"
            style="-fx-font-family: 'Karmatic Arcade'; 
                   -fx-font-size: 24; 
                   -fx-background-color: #e74c3c; 
                   -fx-text-fill: white; 
                   -fx-padding: 10 20;" />

</VBox>
